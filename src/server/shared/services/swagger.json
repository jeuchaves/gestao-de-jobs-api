{
    "openapi": "3.0.0",
    "info": {
        "title": "API de cidades e pessoas",
        "description": "API de cidades e pessoas",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3333",
            "description": "Servidor de desenvolvimento"
        }
    ],
    "paths": {
        "/cidades": {
            "post": {
                "summary": "Cria uma cidade",
                "tags": ["Cidades"],
                "security": [{ "bearerAuth": [] }],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CidadeInput"
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "Erro de validação"
                    },
                    "500": {
                        "description": "Erro interno"
                    },
                    "201": {
                        "description": "Cidade criada",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Cidade"
                                }
                            }
                        }
                    },
                    "401": {
                        "$ref": "#/components/responses/UnauthorizedError"
                    }
                }
            },
            "get": {
                "summary": "Lista todas as cidades",
                "tags": ["Cidades"],
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "query",
                        "description": "ID da cidade",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Número da página para paginação",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "minimum": 1,
                            "default": 1,
                            "example": 1
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Número de registros por página",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "minimum": 1,
                            "default": 10,
                            "example": 10
                        }
                    },
                    {
                        "name": "filter",
                        "in": "query",
                        "description": "Filtro de nome da cidade",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "Campo Grande"
                        }
                    }
                ],
                "responses": {
                    "500": {
                        "description": "Erro interno"
                    },
                    "200": {
                        "description": "Cidades listadas",
                        "headers": {
                            "x-total-count": {
                                "description": "Número total de cidades disponíveis",
                                "schema": {
                                    "type": "integer",
                                    "example": 100
                                }
                            }
                        },
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Cidade"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "$ref": "#/components/responses/UnauthorizedError"
                    }
                }
            }
        },
        "/cidades/{id}": {
            "get": {
                "description": "Busca uma cidade pelo id",
                "summary": "Busca uma cidade",
                "tags": ["Cidades"],
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "Id da cidade",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "404": {
                        "description": "Cidade não encontrada"
                    },
                    "500": {
                        "description": "Erro interno"
                    },
                    "200": {
                        "description": "Cidade encontrada",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Cidade"
                                }
                            }
                        }
                    },
                    "401": {
                        "$ref": "#/components/responses/UnauthorizedError"
                    }
                }
            },
            "delete": {
                "description": "Deleta uma cidade pelo id",
                "summary": "Deleta uma cidade",
                "tags": ["Cidades"],
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "Id da cidade",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "404": {
                        "description": "Cidade não encontrada"
                    },
                    "500": {
                        "description": "Erro interno"
                    },
                    "204": {
                        "description": "Cidade deletada"
                    },
                    "401": {
                        "$ref": "#/components/responses/UnauthorizedError"
                    }
                }
            },
            "put": {
                "description": "Atualiza uma cidade pelo id",
                "summary": "Atualiza uma cidade",
                "tags": ["Cidades"],
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "Id da cidade",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CidadeInput"
                            }
                        }
                    }
                },
                "responses": {
                    "404": {
                        "description": "Cidade não encontrada"
                    },
                    "400": {
                        "description": "Erro de validação"
                    },
                    "500": {
                        "description": "Erro interno"
                    },
                    "204": {
                        "description": "Cidade atualizada"
                    },
                    "401": {
                        "$ref": "#/components/responses/UnauthorizedError"
                    }
                }
            }
        },
        "/pessoas": {
            "get": {
                "summary": "Lista todas as pessoas",
                "tags": ["Pessoas"],
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "query",
                        "description": "ID da pessoa",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Número da página para paginação",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "minimum": 1,
                            "default": 1,
                            "example": 1
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Número de registros por página",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "minimum": 1,
                            "default": 10,
                            "example": 10
                        }
                    },
                    {
                        "name": "filter",
                        "in": "query",
                        "description": "Filtro de nome da pessoa",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "João"
                        }
                    }
                ],
                "responses": {
                    "500": {
                        "description": "Erro interno"
                    },
                    "200": {
                        "description": "Pessoas listadas",
                        "headers": {
                            "x-total-count": {
                                "description": "Número total de pessoas disponíveis",
                                "schema": {
                                    "type": "integer",
                                    "example": 50
                                }
                            }
                        },
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Pessoa"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "$ref": "#/components/responses/UnauthorizedError"
                    }
                }
            },
            "post": {
                "summary": "Cria uma pessoa",
                "tags": ["Pessoas"],
                "security": [{ "bearerAuth": [] }],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/PessoaInput"
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "Erro de validação"
                    },
                    "500": {
                        "description": "Erro interno"
                    },
                    "201": {
                        "description": "Pessoa criada",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Pessoa"
                                }
                            }
                        }
                    },
                    "401": {
                        "$ref": "#/components/responses/UnauthorizedError"
                    }
                }
            }
        },
        "/pessoas/{id}": {
            "get": {
                "description": "Busca uma pessoa pelo id",
                "summary": "Busca uma pessoa",
                "tags": ["Pessoas"],
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "Id da pessoa",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "404": {
                        "description": "Pessoa não encontrada"
                    },
                    "500": {
                        "description": "Erro interno"
                    },
                    "200": {
                        "description": "Pessoa encontrada",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Pessoa"
                                }
                            }
                        }
                    },
                    "401": {
                        "$ref": "#/components/responses/UnauthorizedError"
                    }
                }
            },
            "put": {
                "description": "Atualiza uma pessoa pelo id",
                "summary": "Atualiza uma pessoa",
                "tags": ["Pessoas"],
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "Id da pessoa",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/PessoaInput"
                            }
                        }
                    }
                },
                "responses": {
                    "404": {
                        "description": "Pessoa não encontrada"
                    },
                    "400": {
                        "description": "Erro de validação"
                    },
                    "500": {
                        "description": "Erro interno"
                    },
                    "204": {
                        "description": "Pessoa atualizada"
                    },
                    "401": {
                        "$ref": "#/components/responses/UnauthorizedError"
                    }
                }
            },
            "delete": {
                "description": "Deleta uma pessoa pelo id",
                "summary": "Deleta uma pessoa",
                "tags": ["Pessoas"],
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "Id da pessoa",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "404": {
                        "description": "Pessoa não encontrada"
                    },
                    "500": {
                        "description": "Erro interno"
                    },
                    "204": {
                        "description": "Pessoa deletada"
                    },
                    "401": {
                        "$ref": "#/components/responses/UnauthorizedError"
                    }
                }
            }
        },
        "/entrar": {
            "post": {
                "summary": "Autentica um usuário",
                "tags": ["Usuários"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UsuarioInputSignIn"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Usuário autenticado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AuthToken"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Erro de validação"
                    },
                    "401": {
                        "$ref": "#/components/responses/UnauthorizedError"
                    },
                    "500": {
                        "description": "Erro interno"
                    }
                }
            }
        },
        "/cadastrar": {
            "post": {
                "summary": "Registra um novo usuário",
                "tags": ["Usuários"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UsuarioInputSignUp"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuário registrado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Usuario"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Erro de validação"
                    },
                    "401": {
                        "$ref": "#/components/responses/UnauthorizedError"
                    },
                    "500": {
                        "description": "Erro interno"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "CidadeInput": {
                "type": "object",
                "properties": {
                    "nome": {
                        "type": "string",
                        "example": "Campo Grande"
                    }
                },
                "required": ["nome"]
            },
            "Cidade": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "nome": {
                        "type": "string",
                        "example": "Campo Grande"
                    }
                },
                "required": ["id", "nome"]
            },
            "PessoaInput": {
                "type": "object",
                "properties": {
                    "nomeCompleto": {
                        "type": "string",
                        "example": "João da Silva"
                    },
                    "cidadeId": {
                        "type": "integer",
                        "example": 1
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "joao.silva@example.com"
                    }
                },
                "required": ["nome", "idade", "cidadeId"]
            },
            "Pessoa": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "nomeCompleto": {
                        "type": "string",
                        "example": "João da Silva"
                    },
                    "cidadeId": {
                        "type": "integer",
                        "example": 1
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "joao.silva@example.com"
                    }
                },
                "required": ["id", "nome", "idade", "cidadeId"]
            },
            "UsuarioInputSignIn": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "joao.silva@example.com"
                    },
                    "senha": {
                        "type": "string",
                        "format": "password",
                        "example": "SenhaSegura123"
                    }
                },
                "required": ["email", "password"]
            },
            "UsuarioInputSignUp": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string",
                        "example": "joao.silva"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "joao.silva@example.com"
                    },
                    "senha": {
                        "type": "string",
                        "format": "password",
                        "example": "SenhaSegura123"
                    }
                },
                "required": ["nome", "email", "password"]
            },
            "Usuario": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "username": {
                        "type": "string",
                        "example": "João da Silva"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "joao.silva@example.com"
                    }
                },
                "required": ["id", "nome", "email"]
            },
            "AuthToken": {
                "type": "object",
                "properties": {
                    "token": {
                        "type": "string",
                        "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                    }
                },
                "required": ["token"]
            },
            "UnauthorizedError": {
                "type": "object",
                "properties": {
                    "errors": {
                        "type": "object",
                        "properties": {
                            "default": {
                                "type": "string",
                                "example": "Não autorizado"
                            }
                        }
                    }
                }
            }
        },
        "responses": {
            "UnauthorizedError": {
                "description": "Não autorizado",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/UnauthorizedError"
                        }
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}
